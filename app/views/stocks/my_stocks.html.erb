<% unless @start_time.nil? %>
  <p class="centered-text last-updated">Last updated at: <%= @start_time.strftime("%d-%m-%y @ %H:%M") %> (for <%= @gap %> minutes)</p>
<% end %>

<div class="centered-text">
  <%= link_to stocks_path, class: "btn btn-flat" do %>
    Search stocks
  <% end %>
</div>

<div class="container">
  <div class="row">

    <% @my_stocks.each do |stock| %>
      <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-4">
        <%= render "shared/stock_card", stock: stock %>
      </div>
    <% end %>

  </div>
</div>
